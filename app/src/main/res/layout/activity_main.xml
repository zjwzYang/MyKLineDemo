<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/candler_chart"
        android:layout_width="match_parent"
        android:layout_height="200dp"></com.github.mikephil.charting.charts.CombinedChart>

    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/kline_chart_volume"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/candler_chart"></com.github.mikephil.charting.charts.CombinedChart>

</RelativeLayout>
